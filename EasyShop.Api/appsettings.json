{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "AllowedHosts": "*",

  "TokenOptions": {
    "SecurityKey": "MyDevSuperSecretKey123!@#ExtendedTo32Chars",
    "Issuer": "https://localhost",
    "Audience": "https://localhost",
    "AccessTokenExpiration": 10
  },

  "ConnectionStrings": {
    //"DefaultConnection": "Server=.\\MSSQLSERVER1;Initial Catalog=EasyShop;Integrated Security=true;TrustServerCertificate=True"
    "DefaultConnection": "Server=localhost,1434;Database=EasyShop;User Id=sa;Password=${SA_PASSWORD};TrustServerCertificate=True" // burada password görünmesin environment variable üzerinden okunmasını sağla. Prod için Azure Key Vault veya başka secret manager kullanılabilir.
  }
}
