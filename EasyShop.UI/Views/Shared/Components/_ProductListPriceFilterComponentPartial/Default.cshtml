@model List<PriceRangeListDto>

<h5 class="section-title position-relative mb-3"><span class="bg-secondary pr-3">Fiyat</span></h5>
<div class="bg-light p-4 mb-30">
    <form>
        <div class="custom-control custom-checkbox d-flex align-items-center justify-content-between mb-3">
            <input type="checkbox" class="custom-control-input" checked id="price-all">
            <label class="custom-control-label" for="price-all">Tümü</label>
            @*   <span class="badge border font-weight-normal">295</span>  *@
        </div>

        @foreach (var priceRange in Model.SelectMany(pr => pr.PriceRangeValue))
    {
        <div class="custom-control custom-checkbox d-flex align-items-center justify-content-between mb-3">
            <input type="checkbox" class="custom-control-input" id="price-@priceRange">
            <label class="custom-control-label" for="price-@priceRange">@priceRange</label>
        </div>
    }
    </form>
</div>

