@model List<ColorListDto>

<h5 class="section-title position-relative mb-3"><span class="bg-secondary pr-3">Renk</span></h5>
<div class="bg-light p-4 mb-30">
    <form>
        <div class="custom-control custom-checkbox d-flex align-items-center justify-content-between mb-3">
            <input type="checkbox" class="custom-control-input" checked id="color-all">
            <label class="custom-control-label" for="color-all">Tümü</label>
          @*   <span class="badge border font-weight-normal">1000</span> *@
        </div>
   
    @foreach (var colorValue in Model.SelectMany(c => c.ColorValue))
    {
        <div class="custom-control custom-checkbox d-flex align-items-center justify-content-between mb-3">
            <input type="checkbox" class="custom-control-input" id="color-@colorValue">
            <label class="custom-control-label" for="color-@colorValue">@colorValue</label>
        </div>
    }
    </form>
</div>


