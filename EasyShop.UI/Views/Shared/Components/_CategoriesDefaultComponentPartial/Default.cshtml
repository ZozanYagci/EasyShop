@model CategoriesViewModel

<div class="container-fluid pt-5">
    <h2 class="section-title position-relative text-uppercase mx-xl-5 mb-4"><span class="bg-secondary pr-3">ÖNE ÇIKAN KATEGORİLER</span></h2>
    <div class="row px-xl-5 pb-3">
        @foreach (var category in Model.Categories)
        {
            var products = Model.ProductStocks.Where(p => p.SubCategoryId == category.Id).ToList();
            if (products is not null)
            {
                <div class="col-lg-3 col-md-4 col-sm-6 pb-1">
                    <a class="text-decoration-none" href="">
                        <div class="cat-item d-flex align-items-center mb-4">
                            <div class="overflow-hidden" style="width: 100px; height: 100px;">
                                <img class="img-fluid" src="@category.ImageUrl" alt="">

                            </div>
                            <div class="flex-fill pl-3">
                                <h6>@category.Name</h6>
                                @foreach(var product in products)
                                {
                                    <small class="text-body">@product.StockQuantity Ürün</small>
                                }
                               
                            </div>
                        </div>
                    </a>
                </div>
            }
        }
    </div>
</div>


<style>
    .cat-item img {
        width: 100%;
        height: 100%;
        object-fit: cover; /* Görseli alanı dolduracak şekilde sığdır */
        border-radius: 10px; /* İsteğe bağlı, kenarları yuvarlatır */
    }
</style>